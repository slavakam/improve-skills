{
  "root": true,
  "parserOptions": {
    "ecmaVersion":  2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "parser": "@typescript-eslint/parser",
  "extends": [
    "airbnb",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/typescript"
  ],
  "env": {
    "browser": true,
    "es6": true
  },
  // "plugins" : ["redux-saga"],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": ["**/__test__/**", "webpack/**", "test/**"],
        "optionalDependencies": false
      }
    ],

    // intentionally skipping these rules
    "arrow-body-style": "off",
    "react/require-default-props": "off",
    "import/prefer-default-export": "off",
    "no-underscore-dangle": "off",

    // skip new rules while discuss it's usefullness
    // TODO: Review these rules and disscuss which of them should be enabled
    "object-curly-newline": "off",
    "semi-style": "off",
    "no-restricted-globals": "off",
    "prefer-destructuring": "off",
    "react/jsx-curly-brace-presence": "off",
    "react/default-props-match-prop-types": "off",
    "react/jsx-closing-tag-location": "off",
    "jsx-a11y/anchor-is-valid": "off",
    "jsx-a11y/click-events-have-key-events": "off",
    "jsx-a11y/anchor-has-content": "off",

    // correct rules
    "class-methods-use-this": "off",

    "react/forbid-prop-types": "off",
    "react/no-danger": "off",
    "react/destructuring-assignment": "off",
    "react/jsx-filename-extension": "off",
    "react/jsx-one-expression-per-line": "off",

    "jsx-a11y/alt-text": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "jsx-a11y/no-noninteractive-element-interactions": "off",
    "jsx-a11y/label-has-for": "off",
    "jsx-a11y/label-has-associated-control": "off",
    "no-useless-rename": "off",

    // "redux-saga/no-yield-in-race": "error",
    // "redux-saga/yield-effects": "error",

    "indent": "off",
    "@typescript-eslint/indent": ["error", 2],
    "@typescript-eslint/explicit-member-accessibility": "off",

    // TODO: wait new release of eslint-plugin-import
    "import/named": "off",

    "no-undef": "off",
    "implicit-arrow-linebreak": "off"
  }
}
